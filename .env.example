# Required
OPENAI_API_KEY=replace-with-key

# Source selection: stdin | text | file | notion
# FLASHCARD_SOURCE=stdin
FLASHCARD_FILE=./notes.md

# Notion mode only
# NOTION_TOKEN=secret_xxx
# NOTION_PAGE_ID=

# OpenAI settings
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.2
CARDS_PER_CHUNK=2

# AnkiConnect settings
ANKI_CONNECT_URL=http://127.0.0.1:8765
ANKI_DECK=LLM Flashcards
ANKI_NOTE_MODEL=Basic
ALLOW_DUPLICATE_NOTES=false
